  <body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form>
        <form action="/skater" method="POST" class="registro-form" id="registro-form"></form>
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" type="text" name="email" id="email" placeholder="Email"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" type="text" name="name" id="name" placeholder="Nombre"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input class="form-control m-auto" type="password" name="pw" id="pw" placeholder="Password"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input class="form-control m-auto" type="password" name="pw2" id="pw2" placeholder="Repita password"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input class='form-control m-auto' type="number" id='ano_experiencia' name="experiencia"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class='form-control m-auto' type="text" id="especialidad" name="especialidad" />
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input type="file" name="fotoSkater" id="foto" placeholder="Seleccionar Imagen"/>
          </div>
        </div>
        <button type="submit" class="btn btn-info mb-3" id="btnRegistrar">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
      </form>
    </div>
